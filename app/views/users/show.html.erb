

<section class="videocontainer bg-grey section">
	    <div class="container-fluid position-relative">            
	        <% if defined?(Devise) %>
        <% if current_user %>
	        <h1 class="text-center color-green txt-regular col-md-4 col-md-offset-4">Hello <%= @user.username %>!</h1>
			
        <% else %>
  				<h1 class="text-center color-green txt-regular col-md-4 col-md-offset-4">User Profile: <%= @user.username %></h1>
        <% end %>
<% end %>
	        <div class="filterbox col-md-2 col-md-offset-2">
	            <div class="btn-group">
                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                  Account <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to "Edit Account", edit_user_registration_path %></li>
                  <li class="divider"></li>
                  <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
                </ul>
            </div>
	        </div>
	        <div class="clear mar-bot30"></div>
	        <div id="goals" class="masonry clearfix">
				<%= render @goals.order(:date).reverse_order %>
			</div>

	<div class="clear mar-bot50"></div>
         <div class="align-center paginator">

  	<%= will_paginate @goals %>
	</div>
	</div>





<% title "#{@user.username}'s Profile" %>
<% description "User profile of #{@user.username}, check out their favorite goals!" %>
<% keywords 'World Cup, Premier League, La Liga, Cups, Leagues, Highlights, gifs, Gfycat, soccer, football, goals, goal, Liverpool, Barcelona, Real Madrid, Manchester United, Chelsea, Arsenal' %>


