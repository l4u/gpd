<%- model_class = Goal -%>


<div class="jumbotron">
  <h1><%= @goal.player %> (<%= @goal.team.name %>) v. <%= @goal.opponent.name %></h1>
</div>

<div class="showContent">

<% if @goal.gfy = true %>
<div class="gfyShow">
  <div class="vidOut">
  	<div class="gfyitem" data-title=false data-autoplay=false data-controls=false data-expand=false data-id="<%= @gfyid %>" %>"></div> 
  </div>
</div>

<% else %>

<h3>Please add my video!</h3>

<% end %>

<ul class="list-group">
  
  <li class="list-group-item active"><%= @goal.competition.name %></li>
  <% if @goal.stage != nil %><li class="list-group-item"><strong>Stage:</strong> <%= @goal.stage %></li><% end %>
  <% if @goal.assist != nil %><li class="list-group-item"><strong>Assist:</strong> <%= @goal.assist %></li><% end %>
  <% if @goal.minute != nil %><li class="list-group-item"><strong>Minute:</strong> '<%= @goal.minute %></li><% end %>
  <% if @goal.date != nil %><li class="list-group-item"><strong>Date:</strong> <%= @goal.date %></li><% end %>
  <% if @goal.stadium != nil %><li class="list-group-item"><strong>Stadium:</strong> <%= @goal.stadium %></li><% end %>
</ul>




<div class="form-group">
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_goal_path(@goal), :class => 'btn btn-info' %>
<% if user_signed_in? && current_user.admin?  %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              goal_path(@goal),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  <% end %>


  
</div>

</div>



