<%- model_class = Goal -%>


<div class="jumbotron">
  <h1><%= @goal.player %> (<%= @goal.team %>) v. <%= @goal.opponent %></h1>
</div>

<div class="showContent">

<% if @goal.gfy = true %>
<div class="gfyShow">
  <div class="vidOut">
  	<div class="gfyitem" data-title=false data-autoplay=false data-controls=false data-expand=false data-id="<%= @gfyid %>" %>"></div> 
  </div>
</div>

<% else %>

<h3>Please add my video!</h3>

<% end %>

<div class="form-group">
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_goal_path(@goal), :class => 'btn btn-info' %>
<% if user_signed_in? && current_user.admin?  %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              goal_path(@goal),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  <% end %>


  
</div>

</div>



