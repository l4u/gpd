<div class="box">
	<% gfyid = goal.gfy.to_s.gsub("http://gfycat.com/", "") %>
	
	<h2>
		<%= link_to goal do %>
			<%= goal.player %> (<%= goal.team.name %>) v. <%= goal.opponent.name %>
		<% end %>
	</h2>
	<div class="gfySize">
				<div class="gfyitem" data-title=false data-autoplay=false data-controls=false data-expand=false data-id="<%= gfyid %>"></div>
	</div>
	
<div class="rateStars"><h4 class="avRating">Rating:</h4> <%= rating_for goal, "quality", :enable_half => true, :half_show => true, :disable_after_rate => false %></div>
	<% if user_signed_in? != true %> <%= link_to "Sign Up to Rate", new_user_registration_path, class: "btn btn-info btn-small" %><% end %>


</div>