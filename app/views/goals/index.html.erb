<div class="center">
 
  <div class="jumbotron">

  <% if @query.blank? %>
    <h1>Search Your Favorite Teams and Players</h1>
  <% else %>
    <h1>Search Results for "<%= @query %>"</h1>
  <% end %>
  </div>

  <div id="goals" class="masonry clearfix">
    <%= render @goals %>
  </div>

  <div class="paginator">
    <%= will_paginate @goals, renderer: BootstrapPagination::Rails %>
  </div>
  </div>

</div>